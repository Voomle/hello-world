# PostgreSQL Connection URL
DATABASE_URL="postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@YOUR_DB_HOST:YOUR_DB_PORT/YOUR_DB_NAME"

# Or, if you prefer individual parameters (comment out DATABASE_URL above if using these)
# DB_USER="your_db_user"
# DB_HOST="localhost"
# DB_DATABASE="your_db_name"
# DB_PASSWORD="your_db_password"
# DB_PORT=5432

# Server Port
PORT=3000

# JWT Secret Key
JWT_SECRET="YOUR_VERY_SECRET_KEY_HERE_CHANGE_ME" # Replace with a strong, random string
JWT_EXPIRES_IN="1h" # Example: 1 hour. You can also use "1d", "7d", etc.
